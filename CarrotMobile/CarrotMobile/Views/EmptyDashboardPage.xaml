<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CarrotMobile.CustomRenderers"
             x:Class="CarrotMobile.Views.EmptyDashboardPage">

    <ListView x:Name="MyListView"
             HasUnevenRows="True"
              SeparatorVisibility="None"
            ItemTapped="Handle_ItemTapped"
            CachingStrategy="RecycleElement">

        <!--Custom View Cells-->
        <ListView.Header>
            <StackLayout Orientation="Horizontal" Margin="10">
                <Grid HorizontalOptions="FillAndExpand">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />

                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Hi, Edward,"
                           FontSize="Large" />

                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Add your first reward"
                           FontSize="Medium"
                           Margin="0,30,0,0" />

                    <BoxView Grid.Row="1" Grid.Column="0"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Fill"
                                     HeightRequest="1"
                                     BackgroundColor="Black" />

                    <Label Grid.Row="1" Grid.Column="1"
                           Text="OR"
                           FontSize="Large"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />

                    <BoxView Grid.Row="1" Grid.Column="2"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Fill"

                                     HeightRequest="1"
                                     BackgroundColor="Black" />

                    <Label Grid.Row="2" Grid.ColumnSpan="2"
                           Text="Choose one of these popular rewards"
                           FontSize="Medium" />

                    <local:CircleButton Grid.Row="0" Grid.Column="2"
                        Text="+"
                        TextColor="White"
                        FontSize="Large"
                        HorizontalOptions="End"
                        VerticalOptions="Center" />
                </Grid>
            </StackLayout>
        </ListView.Header>
        <!--Custom View Cells-->
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Frame Padding="5"
                           Margin="5"
                           MinimumHeightRequest="00">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>

                            <Image Grid.RowSpan="2 " Grid.Column="0"
                                   HorizontalOptions="Start"
                                   Source="{Binding Image}" />

                            <Label Grid.Row="0" Grid.Column="1"
                                   Text="{Binding ProviderName}"
                                   FontSize="Medium" />
                            <Label Grid.Row="1" Grid.Column="1"
                                   Text="Find out more"
                                   TextColor="#489FFF" />

                            <Button Grid.RowSpan="2" Grid.Column="2"
                                Text=">"
                                     BorderWidth="0"
                                    BorderColor="Transparent"
                                    BackgroundColor="Transparent"
                                FontSize="Large" />
                        </Grid>
                    </Frame>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>