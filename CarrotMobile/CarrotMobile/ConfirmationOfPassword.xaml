<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarrotMobile.ConfirmationOfPassword">

        <StackLayout >
            <Image Source="food.png"/>
            <Label Text="Carrot"
                   HorizontalOptions="Center"
                   FontSize="45"
                   />

            <Label Text="Awesome!"
                    HorizontalOptions="Center"
                    FontSize="20"/>


            <Label Text="please check your mailbox and follow the instructions to reset your password"
                     HorizontalOptions="Center"
                     Margin="25" 
                     FontSize="15"
                   />


            <Image Source="checkIcon.png"/>

            <Label x:Name="loginLbl"
                   Text="Back to Login" 
                   TextColor="#489FFF"
                   HorizontalOptions="Center"
                   FontSize="20"
                   />

        </StackLayout>

</ContentPage>